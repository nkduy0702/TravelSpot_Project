<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Spot</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>

    {{! Navigation Bar }}
    <header>
      <nav>
        <a href="/newfeed"><img
            class="header-logo"
            src="/img/logo-removebg.png"
            alt="logo"
          /></a>
        <div class="nav-list">
          <input
            type="text"
            class="input-search"
            placeholder="Địa điểm bạn cần tìm kiếm..."
          />
          <a class="input-icon" href="/search">
            <i class="fas fa-search"></i></a>
        </div>
        <div class="user-actions">
          <a id="login" href="/login">Đăng nhập</a>
          <a id="register" href="/register">Đăng ký</a>
          <div class="dropdown">
            <a href="/newfeed/individualPost" id="NameOFUser"> hihihihih</a>
            <a
              id="iconDropDown"
              onmousemove="toggleDropdown()"
              class="dropbtn"
            ><i class="fa-solid fa-caret-down"></i></a>
            <div
              id="myDropdown"
              onmouseleave="hideDropdown()"
              class="dropdown-content"
            >
              <a class="dropdownList" href="/post">Đăng bài</a>
              <a class="dropdownList" href="/newfeed/individualPost">Quản lý bài
                post</a>
              <a class="dropdownList" href="/newfeed/updateInfor">Cập nhật thông
                tin</a>
              <a class="dropdownList" href="/login/logout">Đăng xuất</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {{{body}}}

    <Footer>
      <div class="container">
        <img class="footer-logo" src="/img/logo-removebg.png" alt="logo" />
        <div class="footer-social">
          <ul>
            <li><a href="#"><i class="fab fa-facebook"></i></a></li>
            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
          </ul>
        </div>
      </div>
    </Footer>
    <script src="/js/app.js"></script>

  </body>
</html>